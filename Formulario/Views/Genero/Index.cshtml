@model Formulario.Models.GeneroModel
@{
    ViewBag.Title = "Index";
}

<h2>Registro de g&eacute;neros</h2>

@using (Html.BeginForm("Index", "Genero", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(ng => ng.Nombre)
        @Html.TextBoxFor(ng => ng.Nombre, new { @class = "form-control", @placeholder = "Ingrese el nombre del género" })
        @Html.ValidationMessageFor(ng => ng.Nombre, "", new { @class = "form-text text-danger" })
    </div>
    <div class="form-group">
        @Html.LabelFor(ig => ig.Id_Genero)
        @Html.TextBoxFor(ig => ig.Id_Genero, new { @class = "form-control", @placeholder = "Ingrese el código del género" })
        @Html.ValidationMessageFor(ig => ig.Id_Genero, "", new { @class = "form-text text-danger" })
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-sucess">Registrar g&eacute;nero</button>
    </div>
}
@model Formulario.Models.GeneroModel
@{
    ViewBag.Title = "Modificar género";
}

<h2>Actualizar g&eacute;nero</h2>

@using (Html.BeginForm("GuardarCambios", "Genero", FormMethod.Post))
{
    @Html.Hidden("preid", Model.Id_Genero)
    <div class="form-group">
        @Html.LabelFor(ng => ng.Nombre)
        @Html.TextBoxFor(ng => ng.Nombre, new { @class = "form-control", @placeholder = "Ingrese el nuevo nombre del género" })
        @Html.ValidationMessageFor(ng => ng.Nombre, "", new { @class = "form-text text-danger" })
    </div>
    <div class="form-group">
        @Html.LabelFor(ig => ig.Id_Genero)
        @Html.TextBoxFor(ig => ig.Id_Genero, new { @class = "form-control", @placeholder = "Ingrese el nuevo código del género" })
        @Html.ValidationMessageFor(ig => ig.Id_Genero, "", new { @class = "form-text text-danger" })
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-sucess">Actualizar</button>
    </div>
}

@model Formulario.Models.PaisModel
@{
    ViewBag.Title = "Index";
}

<h2>Registro de pa&iacute;ses</h2>

@using (Html.BeginForm("Index", "Pais", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(np => np.Nombre)
        @Html.TextBoxFor(np => np.Nombre, new { @class = "form-control", @placeholder = "Ingrese el nombre del país" })
        @Html.ValidationMessageFor(np => np.Nombre, "", new { @class = "form-text text-danger" })
    </div>
    <div class="form-group">
        @Html.LabelFor(cp => cp.Codigo)
        @Html.TextBoxFor(cp => cp.Codigo, new { @class = "form-control", @placeholder = "Ingrese el código del país" })
        @Html.ValidationMessageFor(cp => cp.Codigo, "", new { @class = "form-text text-danger" })
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-sucess">Registrar pa&iacute;s</button>
    </div>
}
